{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/input/macro.njk"         import govukInput %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("protectorsName.title"), form.errors) }}
{% endblock %}

{% block mainContent %}

  {{ govukBackLink({
    text: messages("site.back")
  }) }}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <form action="{{ routes.controllers.ProtectorsNameController.onSubmit(mode).url }}" method="post">

          {{ csrf() | safe }}

        <h1 class="govuk-heading-xl">
          {{ messages("protectorsName.heading") }}
        </h1>

          {{ govukInput({
            label: {
              text: messages('protectorsName.FirstName')
            },
            id: "FirstName",
            name: "FirstName",
            value: form.FirstName.value,
            errorMessage: form.FirstName.error
          }) }}

          {{ govukInput({
            label: {
              text: messages('protectorsName.MiddleName')
            },
            id: "MiddleName",
            name: "MiddleName",
            value: form.MiddleName.value,
            errorMessage: form.MiddleName.error
          }) }}

          {{ govukButton({
            text: messages("site.continue")
          }) }}

        </form>

      </div>
    </div>
  </div>

{% endblock %}
